{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "pretty": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "sourceRoot": "./",
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "baseUrl": "./",
    "outDir": "./dist/types"
  },
  "include": ["src", "./node_modules/egreact/types"]
}
